<h1>New ad</h1>
<% form_for(@ad,:url=>{:action=>'create' }) do |f| %>
<p><b>Name</b><br /><%= f.text_field :name %></p>
<p><b>Email</b><br /><%= f.text_field :email %></p>
<p><b>Phone Number</b><br /><%= f.text_field :phone_number %></p>
<p><b>Category</b><br /><%= f.text_field :category %></p>
<p><b>Region</b><br /><%= f.text_field :region %></p>
<p><b>Post Code</b><br /><%= f.text_area :post_code %></p>
<p><b>Heading</b><br /><%= f.text_field :heading %></p>
<p><b>Ad text</b><br /><%= f.text_field :ad_text %></p>
<p><b>Image</b><br /><%= f.text_field :image %></p>
<p><%= f.submit "Create" %></p>
<% end %>